<Window x:Class="chatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chatWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="送信" HorizontalAlignment="Left" Margin="710,382,0,0" VerticalAlignment="Top" Width="75" FontSize="20" Click="button_Click" Background="#FF90E1FF"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="30" Margin="10,382,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="689" FontSize="18" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="messages" AcceptsReturn="True" AcceptsTab="True"
             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="10,10,10,57.5" Text="" FontSize="18"/>
    </Grid>
</Window>
